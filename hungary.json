    "strategies": {
        "sturm_assault": {
            "phase": "activation",
            "subfactions": ["none", "airborne_focus", "armored_focus", "infantry_focus"],
            "name": "Sturm Assault",
            "flavor": "A swift and deadly end to a fight can come with a furious charge...",
            "description": "Use when a Hungarian Infantry unit declares a Charge action. It gets +3\" of Movement for that action.",
            "cost": 1
        },
        "suppressive_fire": {
            "phase": "activation",
            "subfactions": ["none", "airborne_focus", "armored_focus", "infantry_focus"],
            "name": "Suppressive Fire",
            "flavor": "With high rate of fire and a terrifying noise, machineguns can be used to pin down enemy troops with ease.",
            "description": "Use when a Hungarian Infantry unit that contains a Belt-Fed LMG or Medium MG fires. If the attack hits, it assigns 2 additional strain to all affected targets.",
            "cost": 1
        },
        "huszar_tactics": {
            "subfactions": ["none", "infantry_focus", "armored_focus"],
            "phase": "pre_game",
            "name": "Huszar Tactics",
            "flavor": "Aggressive armored pushes, can be highly effective at surrounding and destroying enemies.",
            "description": "Select a Tank or Armored Car unit to be placed in encirclement reserves instead of deployed on the field. At the beginning of any round after the first, that unit may be set up within 6\" of any table edge and more than 12\" from any enemy units. If both players have reserves arriving on the same turn, roll off to see who places theirs first.",
            "cost": 1
        },
        "recrew": {
            "phase": "activation",
            "subfactions": ["infantry_focus"],
            "name": "Recrew (Infantry)",
            "flavor": "It's highly important to keep artillery pieces manned and fighting.",
            "description": "Use at the beginning of a round where an Infantry unit is within 2\" of an Artillery unit. Remove X models from the Infantry unit and add restore X crew to the Artillery unit.",
            "cost": 1
        },
        "target_weak_point": {
            "phase": "activation",
            "subfactions": ["infantry_focus"],
            "name": "Target Weak Point (Infantry)",
            "flavor": "Exploiting weak points an an enemy's armor is key to taking out hard targets.",
            "description": "Use before shooting with an Infantry or Artillery unit's weapon with AP 3 or higher. That attack is treated as hitting the target's side.",
            "cost": 1
        },
        "frag_out": {
            "phase": "activation",
            "subfactions": ["infantry_focus"],
            "name": "Frag Out (Infantry)",
            "flavor": "A volley of hand grenades can be quite effective at dealing with enemies in cover.",
            "description": "Use before shooting with an Infantry unit that has Grenades (any type). That unit may throw 2 additional grenades.",
            "cost": 1
        },
        "armored_assault": {
            "phase": "activation",
            "subfactions": ["armored_focus"],
            "name": "Armored Assault (Armored)",
            "flavor": "Occasionally armored units are used to push infantry and other units off a dug in position.",
            "description": "Use when a Vehicle unit declares a Charge action. It is treated as having Shock(+3) for that action.",
            "cost": 1
        },
        "improvised_tactics": {
            "phase": "activation",
            "subfactions": ["armored_focus"],
            "name": "Improvised Tactics (Armored)",
            "flavor": "Sometimes it is necessary to improvise in an armored engagement in order to gain the edge.",
            "description": "Use when a Vehicle unit is attempting a reaction test. It is treated as having Initiative 9 for this test.",
            "cost": 2
        },
        "crew_repairs": {
            "phase": "activation",
            "subfactions": ["armored_focus"],
            "name": "Emergency Repairs (Armored)",
            "flavor": "In moments of dire circumstance crews may need to repair their vehicle in combat.",
            "description": "Use when a Vehicle unit is activated. That unit may repair one critical damage caused by a penetrating hit.",
            "cost": 1
        },
        "combat_drop": {
            "phase": "pre_game",
            "subfactions": ["airborne_focus"],
            "name": "Combat Drop (Airborne)",
            "flavor": "A well-trained paratroop unit can drop as close as posssible to their intended target.",
            "description": "Set one Infantry, Artillery or Airborne Vehicle unit aside in reserves before the match begins. At the beginning of any round after the first you may attempt to place the unit anywhere on the table over 12\" away from enemy units.\n\nTake a Courage test. If failed, use D10 scattering to determine the unit's new landing location. If the new location is off the table, place the unit at table edge as close as possible. If both players have units with Airdrop they must roll-off to see who deploys first, and then alternate in placing them.",
            "cost": 1
        },
        "tough_fighters": {
            "phase": "activation",
            "subfactions": ["airborne_focus"],
            "name": "Tough Fighters (Airborne)",
            "flavor": "Some of the toughest units to fight in a close combat brawl are trained Airborne units.",
            "description": "Use before an Infantry unit uses a fight action. Its attacks gain AP1.",
            "cost": 2
        },
        "stealth_tactics": {
            "phase": "activation",
            "subfactions": ["airborne_focus"],
            "name": "Stealth Tactics (Airborne)",
            "flavor": "Moving quickly and quietly is a key part of Airborne training.",
            "description": "Use when activating an Infantry unit. It may make a free 6\" move action and may not be targetted by reaction fire when doing so.",
            "cost": 2
        }
    },
