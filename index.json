            "name": "Smoke",
            "description": "This weapon does not target a specific unit. Instead, choose a location on the battlefield within range of this weapon. If a hit is successful, place a 3\" diameter smoke marker at the target location.",
            "points": [-1]
        },
        "tracked": {"name": "Tracked", "description": "This unit may ignore difficult terrain and low obstacles when moving.", "points": ["model.wounds", {"multiply": 2}]},
        "half_tracked": {"name": "Half-Tracked", "description": "This unit may ignore difficult terrain when moving.", "points": ["model.wounds"]},
        "shock": {
            "name": "Shock",
            "inputs": ["x"],
            "description": "When this model successfully charges an enemy unit, make X Strength tests. For each success, the enemy takes 1 hit with no AP.",
            "points": ["model.movement", {"divide": 12}, {"add": ["model.fight", {"subtract": "constants.baseStats.fight"}]}, {"multiply": "rule.x"}, {"multiply": 0.5}]
