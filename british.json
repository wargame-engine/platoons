    "strategies": {
        "fire_and_move": {
            "phase": "activation",
            "subfactions": ["none", "airborne_focus", "armored_focus", "infantry_focus"],
            "name": "Fire and Move",
            "flavor": "With a doctrine of mobile warfare, US Infantry advance and fire with great effect.",
            "description": "Use when an Infantry unit with any Assault weapons is firing. That unit does not suffer -1 to hit when using the Assault rule.",
            "cost": 1
        },
        "scouting_team": {
            "phase": "activation",
            "subfactions": ["none", "airborne_focus", "armored_focus", "infantry_focus"],
            "name": "Scouting Team",
            "flavor": "US Infantry units would often form small scouting teams to scout out the route ahead.",
            "description": "Use instead of your activation. Choose 3 models from an Infantry unit to become a new scouting team unit. That unit immediately activates and is treated as a separate unit for the remainder of the game. This strategy may only be used once per Infantry unit.",
            "cost": 1
        },
        "look_alive": {
            "phase": "activation",
            "subfactions": ["none", "airborne_focus", "armored_focus", "infantry_focus"],
            "name": "Look Alive",
            "flavor": "Situational awareness can be key in combat.",
            "description": "Use when an Infantry unit attemps a reaction test. That unit is treated as having an Initiative of 9.",
            "cost": 2
        },
        "armored_assault": {
            "phase": "activation",
            "subfactions": ["armored_focus"],
            "name": "(Armored) Armored Assault",
            "flavor": "Occasionally armored units are used to push infantry and other units off a dug in position.",
            "description": "Use when a Vehicle unit declares a Charge action. It is treated as having Shock(+3) for that action.",
            "cost": 1
        },
        "improvised_tactics": {
            "phase": "activation",
            "subfactions": ["armored_focus"],
            "name": "(Armored) Improvised Tactics",
            "flavor": "Sometimes it is necessary to improvise in an armored engagement in order to gain the edge.",
            "description": "Use when a Vehicle unit is attempting a reaction test. It is treated as having Initiative 9 for this test.",
            "cost": 2
        },
        "crew_repairs": {
            "phase": "activation",
            "subfactions": ["armored_focus"],
            "name": "(Armored) Emergency Repairs",
            "flavor": "In moments of dire circumstance crews may need to repair their vehicle in combat.",
            "description": "Use when a Vehicle unit is activated. That unit may repair one critical damage caused by a penetrating hit.",
            "cost": 2
        },
        "precision_drop": {
            "phase": "activation",
            "subfactions": ["airborne_focus"],
            "name": "(Airborne) Precision Drop",
            "flavor": "A well-trained paratroop unit can drop as close as posssible to their intended target.",
            "description": "Use when an Infantry unit is arriving using its Airdrop rule. It does not roll for missing its target and instead automatically lands where intended.",
            "cost": 1
        },
        "tough_fighters": {
            "phase": "activation",
            "subfactions": ["airborne_focus"],
            "name": "(Airborne) Tough Fighters",
            "flavor": "Some of the toughest units to fight in a close combat brawl are trained Airborne units.",
            "description": "Use before an Infantry unit uses a fight action. Its attacks gain AP1.",
            "cost": 2
        },
        "stealth_tactics": {
            "phase": "activation",
            "subfactions": ["airborne_focus"],
            "name": "(Airborne) Stealth Tactics",
            "flavor": "Moving quickly and quietly is a key part of Airborne training.",
            "description": "Use when activating an Infantry unit. It may make a free 6\" move action and may not be targetted by reaction fire when doing so.",
            "cost": 2
        }
    },
