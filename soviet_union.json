    "strategies": {
        "urah_assault": {
            "phase": "activation",
            "name": "Urah Assault",
            "flavor": "A swift and deadly end to a fight can come with a furious charge...",
            "description": "Use when a Soviet Infantry unit declares a Charge action. It gets +3\" of Movement for that action.",
            "cost": 1
        },
        "heavy_barrage": {
            "phase": "activation",
            "name": "Heavy Barrage",
            "flavor": "With enough shells, the enemy's morale will surely waver.",
            "description": "Use when a Soviet Artillery unit with the Indirect rule fires. That weapon gains +2 Blast and if the weapon scatters, it hits the closest enemy unit within 3\" instead of 1\".",
            "cost": 1
        },
        "forward_recon": {
            "phase": "activation",
            "name": "Forward Recon",
            "flavor": "Forward recon elements, when used effectively can provide a huge amount of information on enemy forces.",
            "description": "Use when an Infantry unit enters the field. It may make a free 6\" move action.",
            "cost": 1
        }
    },
    "weapons": {},
    "rules": {
        "crack_shot": {"name": "Ambush Master", "description": "This unit get +1 Accuracy and enemies hit by his attacks add one to rolls on damage tables.", "points": 30},
        "no_reatreat": {
            "name": "No Retreat",
            "description": "When a friendly Infantry unit within 6\" fails a Courage test, that unit may remove one model to re-roll the test. This effect may be used once per Infantry unit.",
            "points": 5
        },
        "inspiring_tank_commander": {
            "name": "Inspiring Tank Commander",
            "description": "This unit and friendly Tank or Armored Car units within 6\" get +1 Courage and +1 Initiative.",
            "points": 15
        },
        "battle_hardened": {
            "name": "Battle Hardened",
            "description": "This model may subtract one from any rolls on Damage Tables.",
            "points": 10
        },
        "medical_assistant": {
            "name": "Medical Assistant",
            "description": "Whenever this model, or a friendly Infantry model within 6\" fails a save, roll a D10. On a 4 or less that save is not failed.",
            "points": 10
        }
    },
    "relics": {
